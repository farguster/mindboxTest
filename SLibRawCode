using System;

namespace SLib
{
    public class FindS
    {
        public double Triangle(double a, double b, double c) 
        {
           
            double p = (a + b + c) / 2;
            double f = p * (p - a) * (p - b) * (p - c);
            return Math.Sqrt(f);
        }
        
        public double Circle(double r) 
        {
            return r*2*Math.PI;
        }


    }
}
